{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": [
      "es2017",
      "dom"
    ],
    "outDir": "./dist",
    "strict": true,
    "strictNullChecks": false,
    "baseUrl": "./",
    "paths": {
      "*": [
        "./typescript/*"
      ]
    },
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"],
  "preserveSymlinks": true
}
